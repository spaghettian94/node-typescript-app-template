    "watch:ts": "yarn clean && tsc -w"
  },
  "devDependencies": {
    "@types/node": "^13.7.7",
    "rimraf": "^3.0.2",
    "ts-node": "^8.6.2",
    "ts-node-dev": "^1.0.0-pre.44",
    "typescript": "^3.8.3"
  }
}
